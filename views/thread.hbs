<main>
  <div class="containerThreads">

    <div class="thread">
      <form action="/create/comment/{{_id}}" method="POST">
        <textArea
          id="comment"
          name="comment"
          placeholder="Enter response here"
        ></textArea>
        <input type="submit" value="Submit" />
      </form>
    </div>

    <div class="thread">
      <h2>{{threadName}}</h2>
      <p>{{threadContent}}</p>
      <a class="btn" href="/edit/thread/{{_id}}">Edit thread!</a>
      <a class="btn" href="/delete/thread/{{_id}}">Delete thread!</a>
    </div>

    <div class="comments">
      <h3>Comments</h3>
      {{#each comments}}
        <div class="comments">
          <p>{{comment}}</p>
          <p><a href="/edit/comment/{{_id}}">Edit</a></p>
            |
            <a href="/delete/comment/{{_id}}">Delete</a></p>
        </div>
  <script src="../script/editCommentForm.js"></script>
      {{/each}}
    </div>

    <div class="thread">
      <form action="/create/comment/{{_id}}" method="POST">
        <textArea
          id="comment"
          name="comment"
          placeholder="Enter response here"
        ></textArea>
        <input type="submit" value="Submit" />
      </form>
    </div>
  </div>
</main>